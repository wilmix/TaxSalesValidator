# Environment Configuration Template
# Copy this file to .env and fill in your actual credentials

# Tax Portal Credentials (impuestos.gob.bo)
USER_EMAIL=your.email@company.com
USER_PASSWORD=YourSecurePassword
USER_NIT=1234567890

# MySQL Database Credentials (Inventory System)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_database_name
DB_USER=your_db_username
DB_PASSWORD=your_db_password

# SAS Database Credentials (Accounting System - Optional)
# Only required if using --sync-sas flag to synchronize with accounting system
SAS_DB_HOST=localhost
SAS_DB_PORT=3306
SAS_DB_NAME=sas_database_name
SAS_DB_USER=sas_db_username
SAS_DB_PASSWORD=sas_db_password

# SAS Sync Configuration (Optional)
SAS_SYNC_BATCH_SIZE=100
SAS_SYNC_TIMEOUT=300

# Optional: Scraper Configuration
HEADLESS_MODE=true
DOWNLOAD_TIMEOUT=60
PAGE_TIMEOUT=30
